<?xml version="1.0" encoding="utf-8" ?>
<widget id="NativeBluetooth.widgets.ConnectDevice.widget.ConnectDevice" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Connect Device</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="bluetoothEntity" type="entity" required="true" isPath="optional" allowNonPersistableEntities="true" pathType="reference">
            <caption>Bluetooth entity</caption>
            <category>Data source</category>
            <description>This object represents the object that holds information of bluetooth devices e.g address, uuid etc</description>
        </property>
        <property key="serialDataEntity" type="entity" required="true" isPath="optional" allowNonPersistableEntities="true" pathType="reference">
            <caption>SerialData entity</caption>
            <category>Data source</category>
            <description>This object represents that will contain the serial data retrieved from the device</description>
        </property>
             <property key="refreshContext" type="microflow" required="true">
            <caption>Refresh context</caption>
            <category>Behaviour</category>
            <description>Microflow that will refresh the context object of the dataview</description>
            <returnType type="Void" />
        </property>
    </properties>
</widget>
